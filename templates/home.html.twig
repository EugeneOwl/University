{% extends "base.html.twig" %}

{% block contents %}
    <h4>{{ subheader }}</h4>
    <br>
    <h5>Your tasks</h5>
    {% if tasks is empty %}
        <p>(empty set)</p>
    {% endif %}

    <ol>
    {% for task in tasks %}
        <li>
            {{ task.description }}
        </li>
    {% endfor %}
    </ol>

    <p>
        <a href="{{ path('app_admin') }}">go to admin page</a>
    </p>

    <p>
        <a href="{{ path('app_logout') }}">logout</a>
    </p>
{% endblock %}