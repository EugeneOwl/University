{% extends "base.html.twig" %}

{% block contents %}
    <p>
        <a href="{{ path('app_admin') }}">go to admin manager</a>
    </p>

    {{ form_start(form) }}
    {{ form_row(form.plainSprint) }}
    {{ form_row(form.plainStatus) }}
    <input type="submit" value="bind together">
    {{ form_end(form) }}

    <br><br>
    <h5>Existing sprints with their statuses</h5>
    {% if sprints is empty %}
        <p>(empty set)</p>
    {% endif %}
    <ol>
        {% for sprint in sprints %}
            <li>
                {{ sprint.name }} ({{ sprint.status.name }})
            </li>
        {% endfor %}
    </ol>
{% endblock %}