{% extends "base.html.twig" %}

{% block contents %}
    <p>
        <a href="{{ path('app_admin') }}">go to admin manager</a>
    </p>

    {{ form_start(form) }}
        {{ form_row(form.plainUsers) }}
        {{ form_row(form.plainTasks) }}
        <input type="submit" value="bind together">
    {{ form_end(form) }}

    <br><br>
    <h5>Existing users with there tasks</h5>
    {% if users is empty %}
        <p>(empty set)</p>
    {% endif %}
    <ol>
        {% for username in users|keys %}
            <li>{{ username }}</li>
            <ul>
                {% for task in users[username] %}
                    <li>{{ task }}</li>
                {% endfor %}
            </ul>
        {% endfor %}
    </ol>
{% endblock %}